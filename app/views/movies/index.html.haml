-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :id => "ratings_form", :method => :get do
  Include: 
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, @ratings.include?(rating), :id => "ratings_#{rating}"
  = submit_tag "Refresh", :id => "ratings_submit"

%table#movies

  %thead
    %tr
      %th{params[:sort] == "title" ? {:class => "hilite"} : {}}= link_to "Movie Title", movies_path(:sort => "title"), :id => "title_header"
      %th Rating
      %th Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= link_to" #{movie.title}"  
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title} by Akshay ", movie_path(movie)

= link_to 'Add new movie', new_movie_path
