-#  This file is app/views/movies/index.html.haml
%h1 All Movies
%table#movies

  %thead
    %tr
      %th{:class=>("hilite" if @column_list=="title")}= link_to 'Movie Title', movies_path(:sorted_by=>'title'),:id=>"title_header"
      %th Rating
      %th Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= link_to" #{movie.title}"  
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title} by Akshay ", movie_path(movie)

= link_to 'Add new movie', new_movie_path
